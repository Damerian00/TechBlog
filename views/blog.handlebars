<div class='text-center'>
  <h2 class='blogName' data-post='{{id}}'>{{name}}</h2>
  <p>{{description}}</p>
  <p>Posted by {{user.name}} on {{format_date date_created}}</p>

  {{#if comments.length}}
  <h3>User Comments: </h3>
    {{#each comments as |comment|}}
      <panel>
        <h1 class='topper'></h1>
        <h4>{{comment.message}}</h4>

        <p>- {{user.name}}, {{format_date comment.date_created}}</p>
        <h1 class='bottomer'></h1>
      </panel>
    {{/each}}
  {{/if}}
  <form class='form blog-comment-form' data-visiblity='hidden'>
    <div class='form-group'>
      <label for='comment-desc'>Comment:</label>

      <textarea
        class='form-input'
        id='comment-desc'
        name='comment-desc'
      ></textarea>
    </div>
    <div class='form-group'>
      <button type='submit' class='btn btn-primary'>Submit</button>
    </div>
  </form>

  <button class='addComment'> + Comment</button>
</div>
<script src='.././js/comment.js'></script>